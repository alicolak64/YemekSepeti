<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp">

    <TextView
        android:id="@+id/textView_name_cart_page"
        android:layout_width="135dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_height="64dp"
        android:gravity="center"
        android:layout_margin="10dp"
        android:layout_weight="0"
        android:textColor="@color/black" />

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="67dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="27dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_cart_foodMinus"
            android:layout_width="37dp"
            android:layout_height="43dp"
            android:background="@drawable/button_background_cart"
            android:text="-"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_cart_countOfFood"
            android:layout_width="53dp"
            android:layout_height="41dp"
            android:background="@drawable/button_background"
            android:ems="10"
            android:gravity="center"
            android:inputType="number"
            android:text="1"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_cart_foodPlus"
            android:layout_width="37dp"
            android:layout_height="43dp"
            android:background="@drawable/button_background_cart"
            android:onClick="plusFood"
            android:text="+"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView_price_cart_page"
        android:layout_width="81dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_height="66dp"
        android:layout_margin="10dp"
        android:gravity="center"
        android:layout_weight="0"
        android:textColor="@color/black" />

</LinearLayout>